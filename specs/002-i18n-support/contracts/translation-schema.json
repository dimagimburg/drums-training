{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Translation Bundle",
  "description": "Schema for UI translation files. Each key maps to a translated string. Plural keys use _one/_other suffixes. Interpolation uses {{variable}} tokens.",
  "type": "object",
  "properties": {
    "home.title": { "type": "string", "description": "App title on home screen" },
    "home.subtitle": { "type": "string", "description": "Subtitle below app title" },
    "home.training": { "type": "string", "description": "Training navigation button label" },
    "home.library": { "type": "string", "description": "Library navigation button label" },

    "header.title": { "type": "string", "description": "App title in header bar" },
    "header.backLabel": { "type": "string", "description": "Aria-label for back button" },

    "training.emptyTitle": { "type": "string", "description": "Title when no exercises configured" },
    "training.emptyMessage": { "type": "string", "description": "Message when no exercises configured" },
    "training.errorTitle": { "type": "string", "description": "Title when training fails to load" },
    "training.errorMessage": { "type": "string", "description": "Message when training fails to load" },

    "exercise.progress": { "type": "string", "description": "Progress text: 'Exercise {{current}} of {{total}}'" },
    "exercise.pickLesson": { "type": "string", "description": "Heading for lesson picker" },
    "exercise.pickForMe": { "type": "string", "description": "Random lesson selection button" },
    "exercise.done": { "type": "string", "description": "Done/next exercise button" },
    "exercise.previous": { "type": "string", "description": "Previous exercise button" },
    "exercise.startOver": { "type": "string", "description": "Start over button" },
    "exercise.changelesson": { "type": "string", "description": "Change lesson button" },
    "exercise.noLessonsTitle": { "type": "string", "description": "Title when exercise has no valid lessons" },
    "exercise.noLessonsMessage": { "type": "string", "description": "Message when exercise has no valid lessons" },

    "completion.title": { "type": "string", "description": "Completion screen heading" },
    "completion.fallbackMessage": { "type": "string", "description": "Fallback motivational message" },
    "completion.startAgain": { "type": "string", "description": "Start again button" },

    "library.title": { "type": "string", "description": "Library page heading" },
    "library.lessonCount_one": { "type": "string", "description": "Subtitle with lesson count (singular): '{{count}} lesson to explore'" },
    "library.lessonCount_other": { "type": "string", "description": "Subtitle with lesson count (plural): '{{count}} lessons to explore'" },
    "library.searchResultCount_one": { "type": "string", "description": "Search result count (singular): '{{count}} result for \"{{query}}\"'" },
    "library.searchResultCount_other": { "type": "string", "description": "Search result count (plural): '{{count}} results for \"{{query}}\"'" },
    "library.emptyTitle": { "type": "string", "description": "Title when library has no lessons" },
    "library.emptyMessage": { "type": "string", "description": "Message when library has no lessons" },
    "library.noResultsTitle": { "type": "string", "description": "Title when search finds nothing" },
    "library.noResultsMessage": { "type": "string", "description": "Message when search finds nothing" },
    "library.filterAll": { "type": "string", "description": "Filter label: all lesson types" },
    "library.filterSongs": { "type": "string", "description": "Filter label: songs" },
    "library.filterBeats": { "type": "string", "description": "Filter label: beats" },
    "library.filterFundamentals": { "type": "string", "description": "Filter label: fundamentals" },
    "library.filterAriaLabel": { "type": "string", "description": "Aria-label for filter controls" },

    "libraryList.songs": { "type": "string", "description": "Section heading for songs" },
    "libraryList.beats": { "type": "string", "description": "Section heading for drum beats" },
    "libraryList.fundamentals": { "type": "string", "description": "Section heading for fundamentals" },
    "libraryList.emptyTitle": { "type": "string", "description": "Title when section has no lessons" },
    "libraryList.emptyMessage": { "type": "string", "description": "Message when section has no lessons" },

    "lessonDetail.backToLibrary": { "type": "string", "description": "Back to library button" },
    "lessonDetail.links": { "type": "string", "description": "Links section heading" },
    "lessonDetail.notFoundTitle": { "type": "string", "description": "Title when lesson not found" },
    "lessonDetail.notFoundMessage": { "type": "string", "description": "Message when lesson not found. Contains {{id}} token." },

    "lessonType.song": { "type": "string", "description": "Lesson type label: song" },
    "lessonType.drumBeat": { "type": "string", "description": "Lesson type label: drum beat" },
    "lessonType.fundamental": { "type": "string", "description": "Lesson type label: fundamental" },

    "difficulty.beginner": { "type": "string", "description": "Difficulty label: beginner" },
    "difficulty.intermediate": { "type": "string", "description": "Difficulty label: intermediate" },
    "difficulty.advanced": { "type": "string", "description": "Difficulty label: advanced" },

    "theme.ocean": { "type": "string", "description": "Theme name: ocean" },
    "theme.sunset": { "type": "string", "description": "Theme name: sunset" },
    "theme.toggleAriaLabel": { "type": "string", "description": "Theme toggle aria-label. Contains {{label}} token." },
    "theme.toggleTitle": { "type": "string", "description": "Theme toggle title. Contains {{label}} token." },

    "search.placeholder": { "type": "string", "description": "Search input placeholder" },
    "search.ariaLabel": { "type": "string", "description": "Search input aria-label" },
    "search.clearAriaLabel": { "type": "string", "description": "Clear search button aria-label" },
    "search.matchTitle": { "type": "string", "description": "Match snippet: matched in title" },
    "search.matchDescription": { "type": "string", "description": "Match snippet: matched in description" },
    "search.matchLink": { "type": "string", "description": "Match snippet: matched in link" },

    "youtube.openOnYouTube": { "type": "string", "description": "Link text to open video on YouTube" },
    "youtube.openFallback": { "type": "string", "description": "Fallback link text for YouTube video" },

    "language.switchAriaLabel": { "type": "string", "description": "Language switcher aria-label" },

    "meta.title": { "type": "string", "description": "HTML page title" },
    "meta.description": { "type": "string", "description": "HTML meta description" },
    "meta.noscript": { "type": "string", "description": "Noscript message when JavaScript is disabled" }
  },
  "required": [
    "home.title", "home.subtitle", "home.training", "home.library",
    "header.title", "header.backLabel",
    "training.emptyTitle", "training.emptyMessage", "training.errorTitle", "training.errorMessage",
    "exercise.progress", "exercise.pickLesson", "exercise.pickForMe", "exercise.done",
    "exercise.previous", "exercise.startOver", "exercise.changelesson",
    "exercise.noLessonsTitle", "exercise.noLessonsMessage",
    "completion.title", "completion.fallbackMessage", "completion.startAgain",
    "library.title", "library.lessonCount_one", "library.lessonCount_other",
    "library.searchResultCount_one", "library.searchResultCount_other",
    "library.emptyTitle", "library.emptyMessage", "library.noResultsTitle", "library.noResultsMessage",
    "library.filterAll", "library.filterSongs", "library.filterBeats", "library.filterFundamentals",
    "library.filterAriaLabel",
    "libraryList.songs", "libraryList.beats", "libraryList.fundamentals",
    "libraryList.emptyTitle", "libraryList.emptyMessage",
    "lessonDetail.backToLibrary", "lessonDetail.links",
    "lessonDetail.notFoundTitle", "lessonDetail.notFoundMessage",
    "lessonType.song", "lessonType.drumBeat", "lessonType.fundamental",
    "difficulty.beginner", "difficulty.intermediate", "difficulty.advanced",
    "theme.ocean", "theme.sunset", "theme.toggleAriaLabel", "theme.toggleTitle",
    "search.placeholder", "search.ariaLabel", "search.clearAriaLabel",
    "search.matchTitle", "search.matchDescription", "search.matchLink",
    "youtube.openOnYouTube", "youtube.openFallback",
    "language.switchAriaLabel",
    "meta.title", "meta.description", "meta.noscript"
  ],
  "additionalProperties": false
}
